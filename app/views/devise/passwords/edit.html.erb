<div class='top-cards'>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password (#{@minimum_password_length} characters minimum)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", :class => "login" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>