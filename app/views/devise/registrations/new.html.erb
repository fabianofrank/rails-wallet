<div class="top-cards">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder: "Name", autocomplete: "name", class:"input-field" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "E-mail", autocomplete: "email", class:"input-field" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (#{@minimum_password_length} characters minimum)", class:"input-field" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class:"input-field" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => 'login' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>